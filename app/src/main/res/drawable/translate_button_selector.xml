<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/translate_button_disabled"/>
            <stroke android:width="1dp" android:color="#282C0F"/>
            <corners android:radius="64dp"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/translate_button_pressed"/>
            <stroke android:width="1dp" android:color="#282C0F"/>
            <corners android:radius="64dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/translate_button_enabled"/>
            <stroke android:width="1dp" android:color="#282C0F"/>
            <corners android:radius="64dp"/>
        </shape>
    </item>

</selector>
